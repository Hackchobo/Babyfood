<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.babyfood.product.ProductMapper">

    <insert id="insPk" useGeneratedKeys="true" keyProperty="productId">
        insert into product
        (p_title,p_name,p_price,p_quantity,description,created_at,updated_at)
        values
        ('','',0,0,'',null,null);
    </insert>


    <insert id="insWebEditorImg">
        insert into product_img
        (product_id,img)
        values
        (#{productId},#{img})
    </insert>

    <insert id="insWebEditorImgList">
        insert into product_img
        (product_id,img)
        values
        <foreach collection="img" item="item" separator=",">
        (#{productId},#{item})
        </foreach>
    </insert>




    <update id="updProduct">
        update product
        set p_title=#{title}
        ,p_name=#{name}
        ,p_price=#{price}
        ,p_quantity=#{quantity}
        ,description=#{description}
        ,allergy=#{allergy}
        where product_id=#{productId}
    </update>

    <delete id="delImg">
        delete from product_img
        where product_id=#{productId}
    </delete>


    <delete id="delProduct">
        delete from product
        where product_id=#{productId}
    </delete>




</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.babyfood.main.MainMapper">

    <select id="mainSelView">
    SELECT A.product_id productId,A.p_title title,A.p_price price,B.thumbnail pic
    from product A
    inner join product_img B
    ON A.product_id=B.product_id
    ORDER BY created_at desc
    LIMIT #{startIdx},#{row};
    </select>

    <select id="maxPaige">
        SELECT count(product_id) FROM product
    </select>



    <insert id="insPk" useGeneratedKeys="true" keyProperty="productId">
        insert into product
        (p_title,p_name,p_price,p_quantity,description,created_at,updated_at)
        values
        ('','',0,0,'',null,null);
    </insert>
</mapper>